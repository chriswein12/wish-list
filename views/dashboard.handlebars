<section>
  <div class="container-fluid">
    <h2>My Wish Lists</h2>

    <div>
      <h3 class="new-list-title">Add a new wish list</h3>
      <form class="new-list-form">
        <div class="input-wrapper">
          <div class="form-group">
            <label for="list-name"></label>
            <input type="text" class="form-control" id="list-name" placeholder="Enter wish list name">
          </div>
        </div>
        <button class="btn btn-primary" type="submit">Add New</button>
      </form>
    </div>

  </div>

</section>

{{#if lists}}
  <section>
    <div class="container">
      <div class="row align-items-stretch justify-content-start card-deck">
        {{#each lists as |list|}}
          <div>
            <a href="/wishlist/{{list.id}}">
              <div class="card">
                <h3 class="card-title">{{list.wishlist_name}}</h3>
              </div>
            </a>
            <button class="btn" data-toggle="modal" data-target="#shareModal-{{list.id}}">Share</button>
          </div>
          
          <!-- Modal -->
          <div class="modal fade" id="shareModal-{{list.id}}" tabindex="-1" role="dialog" aria-labelledby="shareModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                    <h3>Share Wishlist: {{list.wishlist_name}}</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button> 
                </div>
                <div class="modal-body">
                    <p>https://twelve-wishes.herokuapp.com/wishlist/{{list.id}}</p>
                </div>
                <div class="modal-footer">
                    <p>Copy the link above to share this list with your friends and family!</p>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>  
  </section>
{{/if}}

<script src="/javascript/dashboard.js" data-user={{user_id}} id="dashboard-script"></script>

