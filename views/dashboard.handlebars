<section>
  <div class="container-fluid">
    <h2>{{username}}'s Wish Lists</h2>

    <div class="mb-4">
      <div class="container text-center container-fluid">
        <button class="btn btn-primary btn-lg mb-2 addItemBtn" type="button" data-toggle="collapse"
          data-target="#addWishlistForm" aria-expanded="false" aria-controls="addWishlistForm">
          Add New Wishlist
        </button>
      </div>
      <div class="collapse" id="addWishlistForm">
        <div class="container item-form-container mb-5">
          <form class="add-item-form">
            <div class="form-group">
              <label for="wishlist-name">Wishlist Name</label>
              <input type="text" class="form-control" id="wishlist-name" placeholder="Enter new Wishlist Name">
            </div>
            <div class="form-group">
              <label for="event-date">Event Date</label>
              <input type="date" class="form-control" id="event-date" aria-describedby="eventHelp"
                placeholder="Enter email">
              <small id="eventHelp" class="form-text text-muted">Optional</small>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <button class="btn btn-secondary">Cancel</button>
          </form>
        </div>
      </div>
    </div>

  </div>

</section>

{{#if lists}}
<section>
  <div class="container">
    <div class="row align-items-stretch justify-content-start card-deck">
      {{#each lists as |list|}}
      <div>
        <a href="/wishlist/{{list.id}}">
          <div class="card">
            <h3 class="card-title">{{list.wishlist_name}}</h3>
          </div>
        </a>
        <button class="btn" data-toggle="modal" data-target="#shareModal-{{list.id}}">Share</button>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="shareModal-{{list.id}}" tabindex="-1" role="dialog" aria-labelledby="shareModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h3>Share Wishlist: {{list.wishlist_name}}</h3>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <p>https://twelve-wishes.herokuapp.com/wishlist/{{list.id}}</p>
            </div>
            <div class="modal-footer">
              <p>Copy the link above to share this list with your friends and family!</p>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>
{{/if}}

<script src="/javascript/dashboard.js" data-user={{user_id}} id="dashboard-script"></script>