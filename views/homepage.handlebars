<div class="container">
    <div class="row justify-content-around">
        <section class="col-sm-4">
            <h2 class="brand-name">12Wishes</h2>
            <h3 class="tagline">Your Holiday Wishlist Made Easy</h3>
            <div class="steps-container">
                <div class="steps-container-padding">
                    <h4>Create your wishlist in 3 easy steps:</h4>
                    <div class="steps-list-padding">
                        <i class="fas fa-check"> Create a new Wishlist</i>
                        </br></br>
                        <i class="fas fa-check"> Add items to the Wishlist</i>
                        </br></br>
                        <i class="fas fa-check"> Share with Friends and Family</i>
                    </div>
                </div>
            </div>
        </section>

        <section class="col-sm-4">
            <form>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="username" class="form-control" id="username" placeholder="Enter username">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="Enter email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.</small>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="confirm-password">Confirm Password</label>
                    <input type="password" class="form-control" id="confirm=password" placeholder="Confirm password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </section>
    </div>
</div>