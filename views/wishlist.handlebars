<section>
  <div class="container-fluid">
    <h2>{{list.wishlist_name}}</h2>
    <button class="btn">Add Item</button>
  </div>
</section>

<form>
  <div class="row">
    <div class="col">
      <input type="text" class="form-control" placeholder="First name">
    </div>
    <div class="col">
      <input type="text" class="form-control" placeholder="Last name">
    </div>
  </div>
</form>

<section>
  
  <div class="accordion" id="list">
    {{#each items as |item|}}
      <h3 class="accordian-header" id="header-{{item.id}}">
        <button class="accordian-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          {{item.item_name}}
        </button>
      </h3>
      <div id="collapse-{{item.id}}" class="accordion-collapse collaps show" aria-labelledby="header-{{item.id}}" data-bs-parent="list">
        <div class="accordian-body">
          <ul>
            <li>Price: {{item.price}}</li>
            <li>Description: {{item.description}}</li>
            <li>Buy at: <a href="{{item.link}}">{{item.purchase_location}}</a></li>
          </ul>
        </div>
      </div>
    {{/each}}
  </div>
  
</section>

<script src="/javascript/singleWishlist.js"></script>